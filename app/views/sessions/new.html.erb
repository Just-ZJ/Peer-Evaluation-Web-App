<% provide(:title, "Log in") %>
<div class="vh-100 d-flex align-items-center">
  <div class="bg-light p-5 m-auto border-light border-5 rounded col-10">
    <h1 class="text-center mb-5">Log in</h1>
    <div class="row text-center">
      <%= form_with(url: login_path, scope: :session, local: true, class: "col-6  m-auto ") do |f| %>
        <%= f.email_field :email, class: 'form-control col-12 mb-3', placeholder: "Email" %>
        <%= f.password_field :password, class: 'form-control col-12 mb-3', placeholder:"Password" %>
        <%= f.submit "Log in", class: "btn btn-primary col-6 mb-3" %>
      <% end %>
      <div class="d-flex flex-column">
        <p class="mb-0">New Student? <%= link_to "Sign up now!", '/signupstudents' %></p>
        <p>New Professor? <%= link_to "Sign up now!", '/signupprofessors' %></p>
      </div>
    </div>
  </div>
</div>
