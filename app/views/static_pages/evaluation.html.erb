<h1>StaticPages#evaluation</h1>
<p>Find me in app/views/static_pages/evaluation.html.erb</p>
<%# ------------------------ grade scale description ------------------------- %>
<div>
  <input type="range" class="form-range m-auto custom-width" min="1" max="5" step="1" id="customRange3">
  <div class="row justify-space-around">
    <% grading_scale.each do |item|%>
      <div class="col">
        <%= item[:grade] %> -- <%= item[:title] %>
        <ul>
          <% item[:description].each do |line|%>
            <li><%= line %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <%# ------------------------ evaluation form ------------------------- %>
  <form class="row g-3 custom-width m-auto mb-5 border-light bg-light p-4 rounded">
    <h2 class="">Group Name</h2>
    <%# loop based on how many people is in the team %>
    <% 4.times do |i|%>
      <div class="col-12 mb-3">
        <%# <label for="customRange3" class="form-label">Example range</label> %>
        <div class="row mb-3 justify-content-evenly">
          <p class="col-4">Team member <%= i + 1 %></p>
          <input type="range" class="form-range col-4 w-50" min="1" max="5" step="1" id="customRange3">
        </div>
        <textarea class="form-control col-12" id="exampleFormControlTextarea1" rows="3" placeholder="Include specific comments about --Team member <%= i + 1 %>-- that justify the quantitative evaluation given above." required></textarea>
      </div>
    <% end %>
    <button type="submit" class="btn btn-primary w-25 m-auto">Submit</button>
  </form>
