<% provide(:title, 'Sign up') %>
<h1 style="text-align:center;">Student Sign up For Peer Evaluation</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(:url => url_for(:controller => 'users', :action => 'createStudent'), model: @student, local: true) do |f| %>
      <%= render 'users/error_student' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>