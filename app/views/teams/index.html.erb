<p id="notice"><%= notice %></p>
<h2>Teams</h2>
<table class="table table-light table-striped table-bordered rounded">
  <thead>
    <tr>
      <th colspan="1">Team Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure? Destroying the team will also destroy all students assigned to this team.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p> View <%= link_to "Students", students_path %> </p>
<p>View <%= link_to "Courses", courses_path %></p>
