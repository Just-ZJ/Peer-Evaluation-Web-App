<%= form_with :url => url_for(:controller => 'students', :action => 'createFromTeam'), method:"post", model: @student, class:"row" do |form| %>
<div class="row justify-content-center align-items-center">
<h3 class="col-3 text-end align-middle mb-0 inline" >Add Student: </h3>
  <div class="col-7">
    <%= form.text_field :"q", class:"form-control-lg", placeholder:"Enter by student's email or name" %>
  </div>
  <%= form.hidden_field :team_id, value:params[:id] %>
  <div class="actions col-2">
    <%= form.submit "Add", class: "btn btn-primary btn-lg p-2 rounded" %>
  </div>
  </div>
<% end %>
