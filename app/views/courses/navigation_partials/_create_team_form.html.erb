<%= form_with url:create_team_courses_path(id: @course.id), method:"post", model: @team, class:"row g-3" do |form| %>
  <div class="col-xl-5 col-12">
    <%= form.text_field :team_name, class:"form-control form-control-lg", placeholder:"Team Name", id:nil%>
  </div>
  <%= form.hidden_field :course_id, value:@course.id, id:nil %>
  <div class="actions col-xl-2 col-12">
    <%= form.submit "Create Team", class: "btn btn-primary btn-lg p-2 rounded" %>
  </div>
<% end %>
