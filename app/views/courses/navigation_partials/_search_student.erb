  <%= form_with(url: "/#{params[:id]}/search?course_id=#{@course.id}", method:"post", class:"mt-5 mb-3") do |form| %>
  <div class="row justify-content-center align-items-center">
    <h3 class="col-3 text-end align-middle mb-0 inline" >Add Student: </h3>
    <div class="col-7">
      <% if !params[:found].nil? && params[:found] = "success" %>
        <% user_id = Student.find(params[:student_id]).user_id %>
        <%= form.text_field :"q", class:"form-control-lg", placeholder:"Search by student's email", value: User.find(user_id).email %>
      <% else %>
        <%= form.text_field :"q", class:"form-control-lg", placeholder:"Search by student's email" %>
      <% end %>
    </div>
    <div class="actions col-2">
      <%= form.submit "Search", class: "btn btn-primary btn-lg p-2 rounded" %>
    </div>
  </div>
<% end %>
