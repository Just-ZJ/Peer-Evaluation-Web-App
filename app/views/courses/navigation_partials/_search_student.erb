  <%= form_with(url: "/#{params[:id].to_s}/search", method:"get", class:"mt-5 mb-3") do |form| %>
  <div class="row">
    <h2 class="col-3 text-end align-middle mb-0 inline" >Add Student: </h2>
    <div class="col-7">
      <%= form.text_field :"q", class:"form-control-lg", placeholder:"Search by student's email" %>
    </div>
    <div class="actions col-1">
      <%= form.submit "Search", class: "btn btn-primary btn-lg p-2 rounded" %>
    </div>
  </div>
<% end %>
