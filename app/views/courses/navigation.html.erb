<h1 class="text-center my-5"> <%= @course.course_name %> </h1>
<%#----------------------------- Teams Table -----------------------------%>
<%= render '/courses/navigation_partials/create_team_form' %>
<%= render '/courses/navigation_partials/teams_table'%>
<%#----------------------------- Students Table -----------------------------%>
<%= render '/courses/navigation_partials/search_student'%>
<%# show the select team only if email is found %>
<% if !params[:found].nil? && params[:found] = "success" %>
  <%= render '/courses/navigation_partials/select_student_team', student: Student.find(params[:student_id]) %>
<% end %>
<%= render '/courses/navigation_partials/students_table'%>
<form action=<%=courses_path%> class="col-1">
  <input class="btn btn-primary btn p-2 rounded mb-5" type="submit" value="&#8592; Back" />
</form>
