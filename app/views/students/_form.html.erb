<% if @student.team_id.is_a? Numeric %>
  <%= form_with(model: student) do |form| %>
    <% if student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

        <ul>
          <% student.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  

    <div class="field">
      <%= form.label :team_id %>
      <%= collection_select(:student, :team_id, Team.all.select{|team| team.course.id == $courseID.to_i}, :id, :team_name, :prompt => true)%>
    </div>

    


    <div class="actions">
      <%= form.submit "Create Student"%>
    </div>
  <% end %>
<% else %>

  <form action="/<%=params[:id].to_s%>/search"> 
            <h5> Search for student by entering their email: </h5>
            <input name="q" type="text">
            <button type="submit">Search </button>
  </form>
<% end %>